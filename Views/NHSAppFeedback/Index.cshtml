<form>

    <!-- Disclaimer -->

    <div class="nhsuk-form-group">
        <h2>Before you contact us</h2>
        <p>
            For help with common problems, check our <a href="https://www.nhs.uk/using-the-nhs/nhs-services/the-nhs-app/help-and-support/"> help and support page</a>.
        </p>
    </div>


    <!-- Contact reason -->

    @* Todo - What are you contacting us about *@


    <!-- Message -->

    <div class="nhsuk-form-group">
        <label class="nhsuk-label" for="message">
            Your message for us
        </label>
        <span id="more-detail-hint" class="nhsuk-hint">
            Do not include personal or medical information. We'll aim to respond within 4 hours.
        </span>
        <span id="more-detail-hint" class="nhsuk-hint">
            <p>
            Examples of personal or medical information:
            </p>
            <ul>
                <li>NHS number</li>
                <li>Home address</li>
                <li>Telephone number</li>
                <li>Date of birth</li>
                <li>Nathional insurance number</li>
                <li>A medical diagnosis</li>
            </ul>
        </span>
        <textarea class="nhsuk-textarea js-character-count " id="message" name="message" rows="8" aria-describedby="with-hint-hint"></textarea> 
    </div>


    <!-- Full name -->

    <div class="nhsuk-form-group">
        <label class="nhsuk-label" for="full_name">
            Full name
        </label>
        <input class="nhsuk-input" id="full_name" name="full_name" type="text">
    </div>


    <!-- Email address --> 

    <div class="nhsuk-form-group">
        <label class="nhsuk-label" for="email">
            Email address
        </label>
        <span id="email-hint" class="nhsuk-hint">
            We’ll only contact you about this. You’ll be sent a short satisfaction survey once we have replied.
        </span>
        <input class="nhsuk-input" id="email" name="email" type="email" aria-describedby="email-hint">
    </div>


    <!-- Privacy policy confirmatin -->

    <div class="nhsuk-form-group">
        <label class="nhsuk-label">
            Privacy policy agreement
        </label>
        <span id="email-hint" class="nhsuk-hint">
            You must confirm you have read and understood our privacy policy before sending. 
        </span>
        <div class="nhsuk-checkboxes">
            <div class="nhsuk-checkboxes__item">
                <!-- todo-design: Tick is not styled correctly -->
                <input class="nhsuk-checkboxes__input" id="privacy_policy_confirmed" name="privacy_policy_confirmed" type="checkbox" value="confirmed" >
                <label class="nhsuk-label nhsuk-checkboxes__label" for="privacy_policy_confirmed">
                    I have read and understood the privacy policy.
                </label>
            </div>
        </div>
    </div>

    <button type="submit" class="nhsuk-button">Send message</button>

</form>
